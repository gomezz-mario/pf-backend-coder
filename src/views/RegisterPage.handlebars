<div class="register-page__container">
	<div class="register-page__content">
		<!-- REGISTER FORM -->
		<form class="form__container" id="form-register">
			<div class="form__content">
				<h3 class="form__title">Registrate</h3>
				<!-- DATOS PERSONALES -->
				<div class="form__section">
					<h5 class="form__section__title">Datos personales</h5>
					<div class="fields">
						<div class="field__container">
							<label>Nombre</label>
							<div class="field">
								<input type="text" placeholder="Ingresa tu nombre" name="firstName">
							</div>
						</div>
						<div class="field__container">
							<label>Apellido</label>
							<div class="field">
								<input type="text" placeholder="Ingresa tu apellido" name="lastName">
							</div>
						</div>
						<div class="field__container">
							<label>Fecha de nacimiento</label>
							<div class="field">
								<input type="date" placeholder="Ingresa tu fecha de nac." name="birthday">
							</div>
						</div>
					</div>
					<div class="form__buttons">
						<button class="btn-next">Siguiente</button>
					</div>
				</div>

				<!-- DATOS DE CONTACTO -->
				<div class="form__section no-show">
					<h5 class="form__section__title">Datos de contacto</h5>
					<div class="fields">
						<div class="field__container">
							<label>Dirección</label>
							<div class="field">
								<input type="text" placeholder="Ingresa tu dirección" name="address">
							</div>
						</div>
						<div class="field__container">
							<label>Teléfono</label>
							<div class="field">
								<input type="tel" placeholder="Ingresa tu número de teléfono" name="phone">
							</div>
						</div>
					</div>
					<div class="form__buttons">
						<button class="btn-back">Atrás</button>
						<button class="btn-next">Siguiente</button>
					</div>
				</div>

				<!-- DATOS DE CUENTA DE USUARIO -->
				<div class="form__section no-show">
					<h5 class="form__section__title">Datos de cuenta de usuario</h5>
					<div class="fields">
						<div class="field__container">
							<label>Email</label>
							<div class="field">
								<input type="email" placeholder="Ingresa tu email" name="email">
							</div>
						</div>
						<div class="field__container">
							<label>Password</label>
							<div class="field">
								<input type="password" placeholder="Ingresa tu contraseña" name="password1">
								<i class="bi bi-eye-slash eye-icon"></i>
							</div>
						</div>
						<div class="field__container">
							<label>Password</label>
							<div class="field">
								<input type="password" placeholder="Repite la contraseña" name="password2">
								<i class="bi bi-eye-slash eye-icon"></i>
							</div>
						</div>
					</div>
					<div class="form__buttons">
						<button class="btn-back">Atrás</button>
						<button class="btn-register">Enviar</button>
					</div>
				</div>
				<div class="form-link__container" style="margin-bottom: 0;">
					<span class="link">Tienes cuenta? <a href="/views/user-login">Inicia sesión.</a></span>
				</div>
			</div>
		</form>
	</div>
</div>

