<header class="header__container">
	<div class="header__content top">
		<a href="/views/" class="header__link title">Home</a>
		{{#unless this.user}}
		<div class="login__container">
			<a href="/views/user-login" class="header__link">Inicia Sesi√≥n</a>
			<a href="/views/user-register" class="header__link">Registrate</a>
		</div>
		{{/unless}}
	</div>
	{{#if this.user}}
	<div class="header__content bottom">
		<div class="address__container">
			<div style="display: flex; justify-content: center; align-items: center; padding: 5px;"><i class="bi bi-geo-alt" style="font-size: 28px;"></i></div>
			<div style="display: flex; justify-content: center; align-items: flex-start; flex-direction: column; padding: 5px;">
				<span style="font-size: 12px;">Enviar a {{this.user.firstName}}</span>
				<span style="font-size: 14px;">{{this.user.address}}</span>
			</div>
		</div>
		{{#if this.premium}}
			<div class="owner__container">
				<a href="#" class="header__link">Ventas</a>
				<a href="/views/my-products" class="header__link">Publicaciones</a>
			</div>
		{{/if}}
		<div style="display: flex; flex-grow: 1;"></div>
		<div class="profile__container">
			<span>{{this.user.firstName}} <i id="icon-arrow" class="bi bi-chevron-down"></i></span>
			<div class="profile__menu no-show">
				<a href="#" class="header__link">Mi perfil</a>
				<a href="/api/users/user-logout" class="header__link">Salir</a>
			</div>
		</div>
		<div class="shopp__container">
			<a href="#" class="header__link">Mis compras</a>
			<a href="/views/cart" class="header__link"><i class="bi bi-cart3"></i></a>
		</div>
		{{#if this.admin}}
			<div class="admin__container">
				<a href="/views/admin" class="header__link" style=""><i class="bi bi-gear"></i></a>
			</div>
		{{/if}}
		
	</div>
	{{/if}}
</header>